# MongoDB MCP Server Configuration

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=rpger
MONGODB_OPTIONS_USE_NEW_URL_PARSER=true
MONGODB_OPTIONS_USE_UNIFIED_TOPOLOGY=true

# Server Configuration
MCP_SERVER_NAME=mongodb-rpger
MCP_SERVER_PORT=3100
MCP_SERVER_DESCRIPTION=MCP server for MongoDB integration with RPGer

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/mcp-server.log

# Security Configuration
# Uncomment and set these for production
# MONGODB_USERNAME=
# MONGODB_PASSWORD=
# MONGODB_AUTH_SOURCE=admin

# Query Limits
QUERY_DEFAULT_LIMIT=10
QUERY_MAX_LIMIT=100

# Performance Tuning
CONNECTION_POOL_SIZE=10
MAX_IDLE_TIME_MS=30000

# Debugging
DEBUG_MODE=false